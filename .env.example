# DrishtiStream Environment Variables
# ====================================
# Copy this file to .env and customize as needed.
# Environment variables override config.yaml values.

# =============================================================================
# VIDEO SOURCE
# =============================================================================

# Video source path (local or GCS URI)
DRISHTI_VIDEO_PATH=./data/sample.mp4
# DRISHTI_VIDEO_PATH=gs://your-bucket/videos/crowd.mp4

# Target frames per second (1-120)
DRISHTI_FPS=30

# Enable video looping (true/false)
DRISHTI_LOOP=true

# JPEG encoding quality (1-100, higher = better quality, larger messages)
DRISHTI_JPEG_QUALITY=85

# =============================================================================
# SERVER
# =============================================================================

# Server port (Cloud Run automatically sets PORT, which takes precedence)
DRISHTI_PORT=8000

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DRISHTI_LOG_LEVEL=INFO

# =============================================================================
# GOOGLE CLOUD (for GCS video sources)
# =============================================================================

# Path to service account credentials JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
